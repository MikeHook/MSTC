<umbPackage>
	<info>
		<package>
			<name>umbraco Member Controls</name>
			<version>1.0</version>
			<license url="http://umbraco.org/gpl.aspx">umbraco gpl</license>
			<url>http://umbraco.org/packages/memberControls.aspx</url>
			<requirements>
				<major>2</major>
				<minor>1</minor>
				<patch>0</patch>
			</requirements>
		</package>
		<author>
			<name>Niels Hartvig</name>
			<website>http://hartvig.com</website>
		</author>
		<readme>
			<![CDATA[
			This will install three macros to use with the member area:
			<ul>
				<li><strong>Member Login</strong>: Basic Login/Logout functionality</li>
				<li><strong>Member Signup</strong>: SignUp Form with custom membertype and groups</li>
				<li><strong>Member Password Reminder</strong>: A simple password reminder via e-mail</li>
			</ul>
			I'd love feedback, so mail me any comments, ideas or improvements at
			hartvig@umbraco.org!<br/><br/>
			Cheers,<br/>
			Niels Hartvig, Copenhagen, Denmark 2006
			]]>
		</readme>
	</info>
<macros>
	<macro>
	<name>Member Login</name>
	<alias>MemberLogin</alias>
	<scriptType>usercontrols/umbracoMemberControls/umbLogin.ascx</scriptType>
	<scriptAssembly></scriptAssembly>
	<xslt></xslt>
	<useInEditor>False</useInEditor>
	<refreshRate>0</refreshRate>
	<properties>
	<property alias="LogOutOnly" name="Log Out Only" show="True" propertyType="bool" />
	<property alias="LoggedInText" name="Logged In Text" show="True" propertyType="text" />
	<property alias="SignOutLinkText" name="Sign Out Link Text" show="True" propertyType="text" />
	</properties>
	</macro>
	<macro>
	<name>Member Signup</name>
	<alias>MemberSignup</alias>
	<scriptType>usercontrols/umbracoMemberControls/umbRegister.ascx</scriptType>
	<scriptAssembly></scriptAssembly>
	<xslt></xslt>
	<useInEditor>False</useInEditor>
	<refreshRate>0</refreshRate>
	<properties>
	<property alias="MemberTypeAlias" name="MemberType Alias" show="True" propertyType="text" />
	<property alias="MemberGroups" name="Member Groups" show="True" propertyType="text" />
	<property alias="RedirectToPageOnSucces" name="Redirect To Page On Succes" show="True" propertyType="contentPicker" />
	<property alias="ErrorUserNameTaken" name="Error User Name Taken" show="True" propertyType="text" />
	<property alias="ErrorEmailInUse" name="Error Email In Use" show="True" propertyType="text" />
	</properties>
	</macro>
	<macro>
	<name>Member Password Reminder</name>
	<alias>MemberPasswordReminder</alias>
	<scriptType>usercontrols/umbracoMemberControls/umbPasswordForgot.ascx</scriptType>
	<scriptAssembly></scriptAssembly>
	<xslt></xslt>
	<useInEditor>False</useInEditor>
	<refreshRate>0</refreshRate>
	<properties>
	<property alias="ErrorMessageNotFound" name="Error Message Email Not Found" show="True" propertyType="text" />
	<property alias="ConfirmMessage" name="Confirm Message" show="True" propertyType="text" />
	<property alias="EmailFrom" name="Email From" show="True" propertyType="text" />
	<property alias="EmailSubject" name="Email Subject" show="True" propertyType="text" />
	<property alias="EmailBody" name="Email Body" show="True" propertyType="textMultiLine" />
	</properties>
	</macro>
	</macros>
	<files>
		<file>
			<guid>umbracoMemberControls.dll</guid>
			<orgPath>/bin</orgPath>
			<orgName>umbracoMemberControls.dll</orgName>
		</file>
		<file>
			<guid>umbPasswordForgot.ascx</guid>
			<orgPath>/usercontrols/umbracoMemberControls</orgPath>
			<orgName>umbPasswordForgot.ascx</orgName>
		</file>
		<file>
			<guid>umbRegister.ascx</guid>
			<orgPath>/usercontrols/umbracoMemberControls</orgPath>
			<orgName>umbRegister.ascx</orgName>
		</file>
		<file>
			<guid>umbLogin.ascx</guid>
			<orgPath>/usercontrols/umbracoMemberControls</orgPath>
			<orgName>umbLogin.ascx</orgName>
		</file>
	</files>
</umbPackage>